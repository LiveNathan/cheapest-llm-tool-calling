<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <logger name="org.springframework.ai" level="DEBUG"/>
    <logger name="org.springframework.ai.chat.client.advisor" level="DEBUG"/>
    <logger name="org.springframework.ai.google.genai" level="DEBUG"/>
    <logger name="com.google.genai" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>